<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="comblanchy.httpsgithub.whatsfordinner.RecipeScreen">

    <LinearLayout
        android:layout_width="576dp"
        android:layout_height="295dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

        <fragment
            android:id="@+id/fprecipes"
            android:name="comblanchy.httpsgithub.whatsfordinner.RecipePortraitFragment"
            android:layout_width="199dp"
            android:layout_height="wrap_content"
            tools:layout="@layout/fragment_recipe_portrait" />

        <fragment
            android:id="@+id/flrecipes"
            android:name="comblanchy.httpsgithub.whatsfordinner.RecipeLandscape"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            tools:layout="@layout/fragment_recipe_landscape" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
