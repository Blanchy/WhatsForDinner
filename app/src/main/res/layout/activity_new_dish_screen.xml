<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="comblanchy.httpsgithub.whatsfordinner.NewDishScreen">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="21dp"
            android:layout_marginStart="21dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_constraintBottom_creator="1"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintTop_creator="1">

            <EditText
                android:id="@+id/recipename"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_weight="1"
                android:hint="Recipe Name"
                android:inputType="textNoSuggestions"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="117dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <ImageView
                    android:id="@+id/recipeimg"
                    android:layout_width="173dp"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/recipename"
                    android:layout_toStartOf="@+id/recipename"
                    app:srcCompat="@mipmap/ic_food_default"
                    tools:layout_editor_absoluteX="60dp"
                    tools:layout_editor_absoluteY="140dp" />

                <ImageButton
                    android:id="@+id/imageButton"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:srcCompat="@mipmap/ic_add_photo" />

            </LinearLayout>

            <TextView
                android:id="@+id/textingredients"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ingredients"
                android:textSize="24sp"
                tools:text="Ingredients:" />

            <Spinner
                android:id="@+id/ingred1"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:layout_weight="1"
                tools:layout_editor_absoluteX="35dp"
                tools:layout_editor_absoluteY="211dp" />

            <Spinner
                android:id="@+id/ingred2"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:layout_weight="1"
                tools:layout_editor_absoluteX="35dp"
                tools:layout_editor_absoluteY="288dp" />

            <Spinner
                android:id="@+id/ingred3"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:layout_weight="1"
                tools:layout_editor_absoluteX="35dp"
                tools:layout_editor_absoluteY="365dp" />

            <Spinner
                android:id="@+id/ingred4"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:layout_weight="1"
                tools:layout_editor_absoluteX="35dp"
                tools:layout_editor_absoluteY="211dp" />

            <Spinner
                android:id="@+id/ingred5"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:layout_weight="1"
                tools:layout_editor_absoluteX="35dp"
                tools:layout_editor_absoluteY="288dp" />

            <Spinner
                android:id="@+id/ingred6"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:layout_weight="1"
                tools:layout_editor_absoluteX="35dp"
                tools:layout_editor_absoluteY="365dp" />

            <Spinner
                android:id="@+id/ingred7"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:layout_weight="1"
                tools:layout_editor_absoluteX="35dp"
                tools:layout_editor_absoluteY="211dp" />

            <Spinner
                android:id="@+id/ingred8"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:layout_weight="1"
                tools:layout_editor_absoluteX="35dp"
                tools:layout_editor_absoluteY="288dp" />

            <Spinner
                android:id="@+id/ingred9"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:layout_weight="1"
                tools:layout_editor_absoluteX="35dp"
                tools:layout_editor_absoluteY="365dp" />

            <Spinner
                android:id="@+id/ingred10"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:layout_weight="1" />

            <EditText
                android:id="@+id/directions"
                android:layout_width="match_parent"
                android:layout_height="174dp"
                android:hint="Directions:"
                android:inputType="textNoSuggestions|textMultiLine"
                android:maxLength="250"
                tools:layout_editor_absoluteX="45dp"
                tools:layout_editor_absoluteY="408dp" />

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="addRecipe"
                android:text="Add Recipe" />

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
