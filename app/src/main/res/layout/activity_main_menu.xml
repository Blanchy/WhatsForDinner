<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainmenu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="comblanchy.httpsgithub.whatsfordinner.MainMenu">

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="273dp"
        android:layout_height="190dp"
        android:layout_marginTop="0dp"
        android:cropToPadding="true"
        android:onClick="showCredits"
        android:scaleType="centerCrop"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/wfdtitle"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <ImageButton
        android:id="@+id/Groceries"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_column="0"
        android:layout_marginBottom="54dp"
        android:layout_marginLeft="55dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="51dp"
        android:layout_row="1"
        android:onClick="toGroceries"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Meals"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@mipmap/ic_grocery"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1" />

    <TextView
        android:id="@+id/titlemeals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Meals"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintRight_toRightOf="@+id/Meals"
        app:layout_constraintTop_toBottomOf="@+id/Meals"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        tools:text="Meals" />

    <ImageButton
        android:id="@+id/Recipes"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="51dp"
        android:layout_marginEnd="42dp"
        android:onClick="toRecipes"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/NewDish"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@mipmap/ic_recipe"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintRight_creator="1" />

    <TextView
        android:id="@+id/titlerecipes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recipes"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="@+id/Recipes"
        app:layout_constraintTop_toBottomOf="@+id/Recipes"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1"
        tools:text="Recipes" />

    <ImageButton
        android:id="@+id/NewDish"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_column="0"
        android:layout_row="0"
        android:onClick="toNewDish"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/Groceries"
        app:layout_constraintLeft_toLeftOf="@+id/Recipes"
        app:layout_constraintRight_toRightOf="@+id/Recipes"
        app:layout_constraintTop_toTopOf="@+id/Groceries"
        app:srcCompat="@mipmap/ic_boilingpot"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <ImageButton
        android:id="@+id/Meals"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_column="1"
        android:layout_row="0"
        android:onClick="toMeals"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/Groceries"
        app:layout_constraintRight_toRightOf="@+id/Groceries"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_utensils"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <TextView
        android:id="@+id/titlegroceries"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="43dp"
        android:layout_marginTop="2dp"
        android:text="Groceries"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Groceries"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1"
        tools:text="Groceries" />

    <TextView
        android:id="@+id/titlenewdish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="28dp"
        android:layout_marginTop="2dp"
        android:text="New Dish"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/NewDish"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        tools:text="New Dish" />

</android.support.constraint.ConstraintLayout>
